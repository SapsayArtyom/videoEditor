{
    "compilerOptions": {
        "target": "es5",
        "outDir": "./dist/",
        "removeComments": true,
        "sourceMap": true,
        "watch": false,
        "module": "es6",
        "moduleResolution": "node",
        "jsx": "react",
        "typeRoots": [
            "./node_modules/@types"
            ],
        "allowJs": true,
        "lib": ["es2015", "dom", "es2017", "es2019"],
        "noImplicitAny": false,
        "baseUrl": ".",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "*": ["../types/*"],
            "PIXI": ["./node_modules/*"]
          }
    },
    "filesGlob": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "lib": [
        "dom",
        "es7"
    ],
}